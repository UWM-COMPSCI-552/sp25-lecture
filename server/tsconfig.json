{
	"compilerOptions": {
		"noEmitOnError": true,
		"removeComments": false,
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"target": "es2017",
		"module": "es2022",
		"rootDir": "src",
		"outDir": "build"
	},
	"include": [
		"src/*",
		"src/client/*"
	],
	"exclude": [
		"node_modules",
	]
}
